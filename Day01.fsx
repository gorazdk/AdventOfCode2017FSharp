let captcha2 (input : string) =
  let len = input.Length;
  
  let left = input.Substring(0, len / 2)
  let right = input.Substring(len / 2, len / 2)

  let r = 
    (Seq.zip left right)
    |> Seq.sumBy (convertToDigits >> digitize) // sum digitization
  r*2

